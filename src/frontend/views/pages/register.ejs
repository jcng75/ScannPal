<!DOCTYPE html>
<html lang="en">
    <head>
        <%- include('../partials/head'); %>
        <link rel="stylesheet" type="text/css" href="styles/account.css">

        <link rel="preconnect" href="https://fonts.googleapis.com">
        <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
        <link href="https://fonts.googleapis.com/css2?family=Mooli&display=swap" rel="stylesheet">
        <script defer src="scripts/register.js" type="text/javascript"></script>
    </head>
    <body>
        <div class="grid">
            <div class="section">
                <img src="/images/image.jpg">
            </div>
            <div class="section" style="background-color: rgb(245, 245, 245);">
                <div class="flexbox">

                    <!-- Header Section -->
                    <div class="header-section">
                        <p class="header">Register an account!</p>
                    </div>

                    <form id="register-form" action="/register" method="post">

                        <% if (error === true) { %>
                            <div class="alert alert-danger text-center p-2">
                                <i class="bi bi-exclamation-triangle-fill"></i> Error creating account. Try again!
                            </div>
                        <% } else if (error === false) { %>
                            <div class="alert alert-success text-center p-2">
                                <i class="bi bi-check-circle-fill"></i> Account successfully created!
                                <br>
                                <a class="success-link" href="/login">Login here</a>
                            </div>
                        <% } %>

                        <!-- First Name -->
                        <div class="input-section">
                            <div class="label-wrapper">
                                <label for="firstname-input">
                                    First Name
                                </label>
                            </div>
                            <div class="input-wrapper">
                                <input class="textbox" name="fname" id="firstname-input" type="text">
                            </div>
                            <div class="error"></div>
                        </div>

                        <!-- Last Name -->
                        <div class="input-section">
                            <div class="label-wrapper">
                                <label for="lastname-input">
                                    Last Name
                                </label>
                            </div>
                            <div class="input-wrapper">
                                <input class="textbox" name="lname" id="lastname-input" type="text">
                            </div>
                            <div class="error"></div>
                        </div>

                        <!-- Email Input Section -->
                        <div class="input-section">
                            <div class="label-wrapper">
                                <label for="email-input">
                                    Email
                                </label>
                                <i class="bi bi-envelope-at-fill"></i>
                            </div>
                            <div class="input-wrapper">
                                <input class="textbox" name="email" id="email-input" type="text">
                            </div>
                            <div class="error"></div>
                        </div>

                        <!-- Password Input Section -->
                        <div class="input-section">
                            <div class="label-wrapper">
                                <label for="password-input">
                                    Password
                                </label>
                                <i class="bi bi-key-fill"></i>
                            </div>
                            <div class="input-wrapper">
                                <input class="textbox" name="password" id="password-input" type="password">
                            </div>
                            <div class="error"></div>
                        </div>

                        <!-- Password Confirmation Section -->
                        <div class="input-section">
                            <div class="label-wrapper">
                                <label for="password-confirm">
                                    Confirm Password
                                </label>
                                <i class="bi bi-key-fill"></i>
                            </div>
                            <div class="input-wrapper">
                                <input class="textbox" name="passwordConfirm" id="password-confirm" type="password">
                            </div>
                            <div class="error"></div>
                        </div>

                        <!-- Create Account Button -->
                        <div class="input-section">
                            <div class="button-wrapper">
                                <button type="submit" class="account-button">
                                    Create Account <i class="bi bi-person-fill-add"></i>
                                </button>
                            </div>
                        </div>
                    </form>

                    <!-- Footer Section -->
                    <div class="footer-section">
                        <p class="footer">
                            Already have an account? 
                            <a class="account-link" href="/login">
                                Sign in here
                            </a>
                        </p>
                    </div>

                </div>
            </div>
        </div>
    </body>
</html>